<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="all-content">
      <section>
        <div class="container">
          <h1>Welcome to currency converter</h1>

          <form action="" id="form-1" method="">
            <div class="source-div">
              <input
                type="number"
                placeholder="source currency"
                name="sourceVal"
                id="sourceVal"
              />
              <!-- <label for="pet-select">Choose a pet:</label> -->

              <select name="currencies" id="my-currency-1">
                <option value="USD" name="USD">United States Dollar</option>
                <option value="GBP" name="GBP">Great Britain Pound</option>
                <option value="CAD">Canadian Dollar</option>
                <option value="NGN" name="NGN">Nigerian Naira</option>
              </select>
            </div>
            <div class="destination-div">
              <input
                type="number"
                placeholder="destination"
                name="destinationVal"
                id="destinationVal"
                value=""
              />
              <!-- <label for="pet-select">Choose a pet:</label> -->

              <select name="currencies" id="my-currency-2">
                <option value="USD">United States Dollar</option>
                <option value="GBP" name="GBP">Great Britain Pound</option>
                <option value="CAD" name="CAD">Canadian Dollar</option>
                <option value="NGN" name="NGN">Nigerian Naira</option>
              </select>
            </div>
            <button id="first-submit" type="submit">Submit</button>
          </form>
        </div>
      </section>
    </div>

    <script src="/app.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
